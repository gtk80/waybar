{
	"layer": "top",
	"position": "top",
	"modules-left": [
		"hyprland/workspaces",
		"custom/kernel",
		"custom/ipaddr"
	],
	"modules-center": [
		"clock#1",
		"clock#2",
		"clock#3"
	],
	"modules-right": [
		"network",
		"pulseaudio",
		"cpu",
		"memory",
		"disk",
                "custom/logout"
	],

	"sway/workspaces": {
		"disable-scroll": true,
		"format": "{name}"
	},

	"clock#1": {
		"format": "🗓️ {:%Y-%m-%d}",
		"tooltip": false
	},
	"clock#2": {
		"format": "📆 {:%A}",
		"tooltip": false
	},
	"clock#3": {
		"format": "⌚ {:%H:%M}",
		"tooltip": false
	},
	"network": {
		"interface": "eno2",
		"interval": 1,
		"format": "📡 {bandwidthTotalBytes}",
		"format-disconnected": "❌",
		"tooltip-format": "{ifname}",
		"tooltip-format-wifi": "{essid} ({signalStrength}%) 📶",
		"tooltip-format-ethernet": "{ifname} 🐱",
		"tooltip-format-disconnected": "Disconnected",
		"max-length": 50
	},
	"pulseaudio": {
		"format": "{icon} {volume:2}%",
		"format-bluetooth": "{icon}  {volume}%",
		"format-muted": "🔈 Mute",
		"format-icons": {
			"headphones": "🎧",
			"default": [
				"🔉",
				"🔊"
			]
		},
		"scroll-step": 5,
		"on-click": "pamixer -t",
		"on-click-right": "pavucontrol"
	},
	"cpu": {
		"interval": 5,
		"format": "🖥️ CPU: {usage:2}%"
	},
	"memory": {
		"interval": 5,
		"format": "🐑 RAM: {}%"
	},
	"disk": {
		"interval": 5,
		"format": "💾 SSD: {percentage_used:2}%",
		"path": "/"
	},
        "custom/logout": {
                "format": "🔘",
                "tooltip": false,
                "on-click": "wlogout"
        },
	"custom/kernel": {
		"format": "⚙️ Kernel: {}",
		"interval": 3600,
		"exec": "uname -r",
		"tooltip": false
	},
	"custom/ipaddr": {
		"format": "💀 IP: {}",
		"interval": 3600,
		"exec": "hostname -I",
		"tooltip": false
	}
}
